<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane prefWidth="351.0" prefHeight="195.0"
           xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea"
           fx:controller="com.example.demo.Controllers.SingInController">
    <children>
        <StackPane>
            <children>
                <VBox spacing="12.0" alignment="BOTTOM_CENTER">
                    <children>
                        <GridPane>
                            <children>
                                <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                <Label text="tag: " GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2" />

                                <TextField fx:id="user" promptText="Registra Il Tuo UserName" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                <TextField fx:id="tag" promptText="Registra Il Tuo tag" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <PasswordField fx:id="password" promptText="Registra La Tua Password" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                            </children>
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="148.0" minWidth="10.0" prefWidth="109.0" />
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="228.0" minWidth="10.0" prefWidth="189.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints />
                            </rowConstraints>
                        </GridPane>
                        <StackPane>
                            <children>
                                <Button defaultButton="true" mnemonicParsing="false" onAction="#pressSingInButton" text="Registrati" StackPane.alignment="CENTER_RIGHT" />
                                <CheckBox fx:id="termsCheckbox" text="Ricordami" StackPane.alignment="CENTER_LEFT"/>
                            </children>
                        </StackPane>
                    </children>
                </VBox>
            </children>
        </StackPane>
      <Label text="𝑹𝒆𝒈𝒊𝒔𝒕𝒓𝒂𝒕𝒊" StackPane.alignment="TOP_LEFT" textFill="royalblue">
          <font>
              <Font size="35.0"/>
          </font>
      </Label>
      <Label fx:id="errorText" StackPane.alignment="TOP_RIGHT" textFill="darkred" text=""  />
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

</StackPane>
