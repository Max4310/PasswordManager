<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane  xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.Controllers.FXaddPassword"
            prefWidth="351.0" prefHeight="195.0">
    <children>
        <StackPane>
            <children>
                <VBox spacing="12.0" alignment="BOTTOM_CENTER">
                    <children>
                        <GridPane>
                            <children>
                                <Label text="Nome Del Servizio:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                <Label text="User Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2" />

                                <TextField fx:id="TXTnomeServizio" promptText="Scrivi Il Nome Del Servizio"
                                           GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                <TextField fx:id="TXTuserName" promptText="Scrivi Il Tuo UserName"
                                           GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                <TextField fx:id="TXTpassword" promptText="Scrivi La Tua Password"
                                               GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                            </children>


                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="148.0" minWidth="10.0" prefWidth="109.0" />
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="228.0" minWidth="10.0" prefWidth="189.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints />
                            </rowConstraints>


                        </GridPane>
                        <StackPane>
                            <children>
                                <Button defaultButton="true"  onAction="#onPressAggiungi" text="Aggiungi" StackPane.alignment="CENTER_RIGHT" />
                                <Button text="Indietro" StackPane.alignment="CENTER_LEFT" onAction="#onPressIndietro" />
                            </children>
                        </StackPane>
                    </children>
                </VBox>
            </children>
        </StackPane>


        <Label text="Aggiungi Una Password" StackPane.alignment="TOP_LEFT" textFill="royalblue">
            <font>
                <Font size="30.0"/>
            </font>
        </Label>


    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

</StackPane>
